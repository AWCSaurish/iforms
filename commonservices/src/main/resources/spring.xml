<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<context:annotation-config />
	<mvc:annotation-driven />
	<context:component-scan
		base-package="com.awcsoftware.controller" />
	<context:component-scan
		base-package="com.awcsoftware.services.impl" />
	<context:component-scan
		base-package="com.awcsoftware.dao.impl" />
	<context:component-scan
		base-package="com.awcsoftware.dto" />
	<context:component-scan
		base-package="com.awcsoftware.dto.mapper" />
	
	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod"
			value="com.awcsoftware.services.impl.PropertiesReader.setProp" />
		<property name="arguments">
			<util:properties location="classpath:resrapi.properties" />
		</property>
	</bean>
	<bean class="org.json.simple.parser.JSONParser" scope="prototype"/>
	<bean class="com.fasterxml.jackson.databind.ObjectMapper" scope="prototype"/>
	<bean class="java.util.ArrayList" scope="prototype"/>
</beans>